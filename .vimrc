filetype indent plugin on
syntax on

set ruler
set number
set hidden
set confirm
set hlsearch
set wildmenu
set smartcase
set visualbell
set ignorecase
set autoindent
set nostartofline
set t_vb=
set mouse=a
set cmdheight=2
set laststatus=2
set pastetoggle=<F11>
set backspace=indent,eol,start
set notimeout ttimeout ttimeoutlen=200

set expandtab
set shiftwidth=4
set softtabstop=4

nnoremap Y y$
nnoremap <C-L> :nohl<CR><C-L>

inoremap <C-U> <C-G>u<C-U>
